<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title. Информационная система</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" href="@Url.Content("~/Content/Images/AppIcon.ico")" />

</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
        <a class="navbar-brand" href="#"><img src=@Url.Content("~/Content/Images/Logo.png") alt="Logo" width="150" height="50" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown active">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Сервисы
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Сетевое оборудование", "Index", "Network", null, new { @class = "dropdown-item" })
                        @Html.ActionLink("Мониторинг", "Index", "Monitoring", null, new { @class = "dropdown-item" })
                        @*<a class="dropdown-item" href="#">Сетевое оборудование</a>
                            <a class="dropdown-item" href="#">Мониторинг АСОД</a>*@
                        @*<div class="dropdown-divider"></div>*@
                    </div>
                </li>

                <li class="nav-item active">
                    @*<a class="nav-link" href="#">Отчетность <span class="sr-only">(current)</span></a>*@
                    @Html.ActionLink("Отчетность", "Index", "Reporting", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @*<a class="nav-link" href="#">Администрирование<span class="sr-only">(current)</span></a>*@
                    @Html.ActionLink("Администрирование", "Index", "Administrating", null, new { @class = "nav-link" })
                </li>
            </ul>
            <div class="justify-content-end">
                @if (User.Identity.IsAuthenticated)
                {
                    @:Здравствуйте, @User.Identity.Name <b>|</b>
                }
                @(!User.Identity.IsAuthenticated
                                      ? Html.ActionLink("Войти", "Login", new { area = "", controller = "Authorization" })
                                      : Html.ActionLink("Выйти", "Logout", new { area = "", controller = "Authorization" }))
            </div>
        </div>
    </nav>

    <div class="container-fluid body-content">
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; ООО "Связист" - Информационная система, @(DateTime.Now.Year)г.</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")

    @RenderSection("scripts", required: false)
</body>
</html>
